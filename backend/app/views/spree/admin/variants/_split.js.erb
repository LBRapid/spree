<script type='text/template' id='variant_split_template'>
  <tr class='stock-item-split'>
    <td colspan='2'>
      Move {{variant.name}} to:
    </td>
    <td colspan='2'>
    <select id='stock-item-split-location' style='width:100%;'>
        {{#each variant.stock_items}}
          <option value='{{this.stock_location_id}}'>{{this.stock_location_name}}</option>
        {{/each}}
          <option>New Shipment</option>
      </select>
    </td>
    <td>
      <input class="quantity" id="item_quantity" type="number" min="1" value="1">
    </td>
    <td class='actions'>
      <a href='#' class='save-split icon_link icon-ok no-text with-tip' title='Save'></a>
      <a href='#' class='cancel-split icon_link icon-cancel no-text with-tip' title='Cancel'></a>
    </td>
  </tr>
</script>
